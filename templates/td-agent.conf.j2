[Unit]
Description=Fluentd
After=network.target

[Service]
Type=forking
PIDFile=/run/td-agent/td-agent.pid
RuntimeDirectory=td-agent

User={{ fluentd_user }}
Group={{ fluentd_group }}

ExecStart=/usr/sbin/td-agent -d /run/td-agent/td-agent.pid -c {{ fluentd_conf_path }}/fluent.conf -o {{ fluentd_log_file }}
ExecStop=/usr/bin/kill -9 $MAINPID
Restart=always

[Install]
WantedBy=multi-user.target
